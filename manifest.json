{
  "manifest_version": 3,
  "name": "AWS region code copy",
  "version": "0.1.0",
  "description": "Copy to clipboard AWS region code with Chrome extension",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": {
    "matches": ["https://*.console.aws.amazon.com/*"],
    "js": "src/js/main.js"
  },
  "action": {},
  "icons": {
    "16": "src/img/icon@16.png",
    "48": "src/img/icon@48.png",
    "128": "src/img/icon@128.png"
  },
  "author": "danishi"
}
